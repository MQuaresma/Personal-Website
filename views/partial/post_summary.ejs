<link rel="stylesheet" type="text/css" href="/css/post_summary.css"/>
<div class="row justify-content-center">
    <div class="col-md-4 col-xs-4">
        <a href="<%= post.title.toLowerCase(); %>" class="thumbnail">
            <img src="<%= post.thumb_path %>" alt="example"/>
        </a>
        <div class="caption">
            <h3><%= post.title %></h3>
            <p><%= post.description %></p>
        </div>
    </div>
</div>